<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="345dp"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:paddingTop="10dp">

    <CheckBox
        android:id="@+id/rv_item_checkbox"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_gravity="center_vertical"
        />

    <FrameLayout
        android:layout_width="307dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/ic_rv_item_background"
        android:clickable="false">

        <TextView
            android:id="@+id/rv_item_tv"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:fontFamily="@font/helvetica_regular"
            android:gravity="center_vertical"
            android:textColor="@color/rv_text_color" />

        <ImageButton
            android:id="@+id/ic_rv_item_pen"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="272dp"
            android:background="@drawable/ic_rv_item_pen" />
            android:clickable="false"
    </FrameLayout>
</LinearLayout>
